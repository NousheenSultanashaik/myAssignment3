<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="136dp"
        android:layout_height="41dp"
        android:layout_marginTop="315dp"
        android:text="@string/String1"
        android:textSize="30dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        tools:layout_editor_absoluteX="140dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="317dp"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="96dp"
        android:layout_height="22dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="158dp"
        android:text="@string/String2"
        android:textColor="@color/existinguser"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcometext"
        tools:ignore="SpUsage,TextContrastCheck,TextSizeCheck" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="@string/String3"
        android:textColor="@color/blue"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintBottom_toTopOf="@+id/textview2"
        tools:ignore="SpUsage,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="620dp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="72dp"
        android:layout_height="22dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="170dp"
        android:text="@string/String4"
        android:textColor="@color/existinguser"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/login_button"
        app:layout_constraintBottom_toTopOf="@id/signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_editor_absoluteX="170dp"
        app:layout_editor_absoluteY="695dp"
        tools:ignore="SpUsage,TextContrastCheck,TextSizeCheck" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_button"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="@string/String5"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textview2"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintVertical_bias="0.316"
        tools:ignore="SpUsage,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="727dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>